{
	"compilerOptions": {
		"composite": true, // For project references
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"module": "esnext",
		"target": "ES2020",

		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext"],

		"noEmit": true, // Bundled
		"customConditions": ["browser"] // I would have expected this to cascade to lib
	},
	"include": ["src"],
	"references": [{ "path": "../lib" }]
}
