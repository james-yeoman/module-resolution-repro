{
	"compilerOptions": {
		"composite": true, // For project references
		"strict": true,
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"module": "esnext",
		"target": "ES2020",

		// Enable typechecking while keeping the TS files raw for importing
		"emitDeclarationOnly": true,
		"outDir": "types"
	},
	"include": ["src"]
}
